<view class="container">
  <view class="search-container">
    <l-button 
    width="710"
    height="60"
    icon="research"
    icon-size="24"
    icon-color="#C4C9D2"
    shape="square"
    bind:lintap="onGotoSearch"
    l-class="search-btn">
      搜索商品
    </l-button>
   
  </view>
  <view class="main">
    <l-segment 
    height="{{segHeight}}"
    placement="left" item-height="90 "
    even="{{false}}" 
    width="160"
    l-active-class="segment-item-active"
    l-inactive-class="segment-item"
    l-line-class="l-seg-line">
      <l-segment-item key="1" tab="唐门"></l-segment-item>
      <l-segment-item key="2" tab="长歌"></l-segment-item>
      <l-segment-item key="3" tab="七秀"></l-segment-item>
      <l-segment-item key="4" tab="藏剑"></l-segment-item>
      <l-segment-item key="5" tab="五毒"></l-segment-item>
      <l-segment-item key="6" tab="唐门"></l-segment-item>
      <l-segment-item key="7" tab="长歌"></l-segment-item>
      <l-segment-item key="8" tab="七秀"></l-segment-item>
      <l-segment-item key="9" tab="藏剑"></l-segment-item>
      <l-segment-item key="10" tab="五毒"></l-segment-item>
      <l-segment-item key="11" tab="唐门"></l-segment-item>
      <l-segment-item key="12" tab="长歌"></l-segment-item>
      <l-segment-item key="13" tab="七秀"></l-segment-item>
    </l-segment>
    <view></view>
  </view>
</view>
