/* pages/detail/detail.wxss */
.top {
  width: 100%;
  height: 680rpx;
}

.tabbar {
  position: fixed;
  bottom: 0;
}

.sku-pending {
  box-sizing: border-box;
  width: 100%;
  height: 80rpx;
  background-color: white;
  margin: 10rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #333333;
  padding: 0 30rpx;
}

.specs > text:first-child {
  color: #999999;
  font-size: 24rpx;
}

.specs > text:nth-child(2) {
  font-size: 24rpx;
  color: #157658;
}

.explain {
  margin-top: 10rpx;
  background-color: white;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.detail-img {
  display: flex;
  width: 100%;
}

.detail-img-container {
  margin-bottom: 200rpx;
}